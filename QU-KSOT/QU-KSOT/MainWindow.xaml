<Window x:Class="QU_KSOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QU-KSOT" Loaded="Window_Loaded" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="681" SizeToContent="WidthAndHeight" d:DesignWidth="730" Width="700" Height="700">
    <Grid Width="700" Height="700">
        <Image Height="480" Name="image1" Stretch="None" Width="640" HorizontalAlignment="Center" VerticalAlignment="Center" ImageFailed="image1_ImageFailed" MouseUp="image1_MouseUp" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="45,56,0,0" Name="coord_X" VerticalAlignment="Top" Width="50" IsReadOnly="True" />
        <Label Content="X:" Height="28" HorizontalAlignment="Left" Margin="19,56,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" IsReadOnly="True" Margin="126,56,0,0" Name="coord_Y" VerticalAlignment="Top" Width="50" />
        <Label Content="Y:" Height="28" HorizontalAlignment="Left" Margin="101,56,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" IsReadOnly="True" Margin="223,56,0,0" Name="coord_D" VerticalAlignment="Top" Width="57" />
        <Label Content="Depth:" Height="28" HorizontalAlignment="Left" Margin="179,56,0,0" Name="label3" VerticalAlignment="Top" />
        <StackPanel Height="Auto" HorizontalAlignment="Left" Margin="307,43,0,0" Name="stackPanel2" VerticalAlignment="Top" Width="115">
            <StackPanel Height="16" Name="stackPanel1" Width="100" Orientation="Horizontal">
                <TextBlock Height="Auto" Name="textBlock1" Text="X = " Width="Auto" />
                <TextBlock Height="Auto" Name="textBlock2" Text="{Binding HorizontalClinkPoint}" Width="Auto" />
            </StackPanel>
            <StackPanel Height="16" Name="stackPanel3" Orientation="Horizontal" Width="100">
                <TextBlock Height="Auto" Name="textBlock3" Text="Y = " Width="Auto" />
                <TextBlock Height="Auto" Name="textBlock4" Text="{Binding VerticalClinkPoint}" Width="Auto" />
            </StackPanel>
            <StackPanel Height="16" Name="stackPanel4" Orientation="Horizontal" Width="100">
                <TextBlock Height="Auto" Name="textBlock5" Text="Depth = " Width="Auto" />
                <TextBlock Height="Auto" Name="textBlock6" Text="{Binding HorizontalClinkPoint}" Width="Auto" />
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Window>
